<h1>Lista de Usuarios</h1>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Correo Electrónico</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to "Mostrar", user %>
          <%= link_to "Editar", edit_user_path(user) %>
          <%= link_to "Eliminar", user, method: :delete, data: { confirm: '¿Estás seguro?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Nuevo Usuario", new_user_path %>
