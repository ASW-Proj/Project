<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
    <% if current_user %>
      <% if current_user && current_user.saved_posts.include?( post.id) %>
        <%= link_to "Unsave", unsave_post_path(post), method: :post %>
      <% else %>
        <%= link_to "Save", save_post_path(post), method: :post %>
      <% end %>
      <% else %>
        Subscribe disabled
      <% end %>
    <% end %>
</div>

